<!-- ORGANIZE TOUR -->
<style>
    #map{
      height:600px;
      width:100%;
    }
</style>
<section class="bg-light" id="organizeTour">

  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <!-- Button trigger modal -->

        <!-- Large modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg">Pili Objek Wisata</button>

        <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <table class="table">
                  <thead class="thead-dark">
                    <tr>
                      <th scope="col">No.</th>
                      <th scope="col">Objek Yang Dipilih</th>
                      <th scope="col">Koordinat Lintang</th>
                      <th scope="col">Koordinat Garis Bujur</th>
                      <th scope="col">Opsi</th>
                    </tr>
                  </thead>
                  <tbody>

                    <% var count = 1; %>
                    <% for(let i=0; i < odtw.length; i++){ %>

                    <tr>
                      <th scope="row"><%= i+1 %></th>
                      <td><%= odtw[i].odtw_name %></td>
                      <td><%= odtw[i].lat %></td>
                      <td><%= odtw[i].lng %></td>
                      <td></td>
                    </tr>
                      
                    <% } %>
                  </tbody>
                </table>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <br>

  <!-- Table for Spot choosed -->
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Objek Yang Dipilih</th>
            <th scope="col">Koordinat Lintang</th>
            <th scope="col">Koordinat Garis Bujur</th>
          </tr>
        </thead>
        <tbody>

          <tr>
            <th scope="row">2</th>
            <td>Ulun Danu Beratan</td>
            <td>4.7</td>
            <td>3.8</td>
          </tr>
          <tr>
            <th scope="row">2</th>
            <td>Tanah Lot</td>
            <td>4.7</td>
            <td>3.8</td>
          </tr>
        </tbody>
      </table>

      </div>

    </div>

  </div>

  <br>

  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div id="map"></div>
      </div>
    </div>

  </div>
</section>
